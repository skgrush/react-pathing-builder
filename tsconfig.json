{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "rootDir": "src/",
    "outDir": "lib/"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
